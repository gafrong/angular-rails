<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <header class="page-header">
      <h2>List</h2>
    </header>
    <form role="form" novalidate name="listForm">
      <div class="form-group" ng-class="{'has-error': !listForm.list_name.$valid}">
        <label for="list_name"><%= List.human_attribute_name :name %></label>
        <input type="text" name="list_name" ng-model="list.name" class="form-control" required />
      </div>
      <div class="form-group" ng-class="{'has-error': !listForm.book_category.$valid}">
        <label for="list_category"><%= List.human_attribute_name :category %></label>
        <input type="text" name="list_category" ng-model="list.category" class="form-control" required />
      </div>

      <div class="form-group" ng-class="{'has-error': !listForm.list_price.$valid, 'has-warning': list.price == 0}">
        <label for="list_price"><%= List.human_attribute_name :price %></label>
        <div class="input-group">
          <span class="input-group-addon">$</span>
          <input type="number" step="any" min="0" name="list_name" ng-model="listHumanPrice" class="form-control" required />
        </div>
      </div>
      <div class="actions">
        <a ng-href="/" class="btn btn-default">Back</a>
        <div class="pull-right">
          <button class="btn btn-primary" ng-click="submitList()" ng-disabled="!listForm.$valid">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>
